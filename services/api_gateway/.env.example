# ============================================================
# API Gateway Configuration
# ============================================================
# Copy this file to .env and modify as needed

# ============ Service Configuration ============
SERVICE_NAME=api-gateway
SERVICE_VERSION=1.0.0
SERVICE_HOST=0.0.0.0
HTTP_PORT=8000
DEBUG=true

# ============ Nacos Configuration ============
NACOS_ENABLED=true
NACOS_SERVER_ADDRESSES=localhost:8848
NACOS_NAMESPACE=public
NACOS_GROUP=DEFAULT_GROUP
NACOS_USERNAME=
NACOS_PASSWORD=

# ============ Downstream Services ============
MCP_SERVICE_URL=http://localhost:8001
RAG_SERVICE_URL=http://localhost:8002
EVALUATION_SERVICE_URL=http://localhost:8003
MONITORING_SERVICE_URL=http://localhost:8004
SINGLE_AGENT_SERVICE_URL=http://localhost:8005
MULTI_AGENT_SERVICE_URL=http://localhost:8006

# ============ CORS Configuration ============
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ============ Rate Limiting ============
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============ Redis Cache ============
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_ENABLED=true
REDIS_CACHE_TTL=3600

# ============ Authentication (optional) ============
AUTH_ENABLED=false
AUTH_SECRET_KEY=your-secret-key-here
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============ Langfuse Observability ============
LANGFUSE_ENABLED=true
LANGFUSE_SECRET_KEY=sk-lf-cd7bcb7d-27ad-4049-b4f7-4f2ca441d579
LANGFUSE_PUBLIC_KEY=pk-lf-dd167d24-a007-4afb-a3af-8c37a922870f
LANGFUSE_HOST=https://cloud.langfuse.com

# ============ Logging Configuration ============
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_DIR=./logs
