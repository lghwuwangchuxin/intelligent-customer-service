# ============================================================
# Single Agent Service Configuration
# ============================================================
# Copy this file to .env and modify as needed

# ============ Service Configuration ============
SERVICE_NAME=single-agent-service
SERVICE_VERSION=1.0.0
SERVICE_HOST=0.0.0.0
HTTP_PORT=8005

# ============ Nacos Configuration ============
NACOS_ENABLED=false
NACOS_SERVER_ADDRESSES=localhost:8848
NACOS_NAMESPACE=public
NACOS_GROUP=DEFAULT_GROUP
NACOS_USERNAME=
NACOS_PASSWORD=

# ============ LLM Configuration ============
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=qwen3:latest
LLM_API_KEY=
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ============ Agent Configuration ============
AGENT_ENABLED=true
AGENT_MAX_ITERATIONS=5
AGENT_MEMORY_MAX_MESSAGES=20
AGENT_MEMORY_SUMMARY_THRESHOLD=10
AGENT_ENABLE_PLANNING=false
AGENT_ENABLE_PARALLEL_TOOLS=true
AGENT_TOOL_TIMEOUT=30
AGENT_MAX_TOOL_CONCURRENCY=5

# ============ Tool Configuration ============
ENABLE_TOOLS=true
ENABLE_RAG=true

# ============ Dependent Services ============
MCP_SERVICE_URL=http://localhost:8001
RAG_SERVICE_URL=http://localhost:8002
MONITORING_SERVICE_URL=http://localhost:8004

# ============ Redis Cache ============
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_ENABLED=true
REDIS_CACHE_TTL=3600

# ============ Langfuse Observability ============
LANGFUSE_ENABLED=true
LANGFUSE_SECRET_KEY=sk-lf-cd7bcb7d-27ad-4049-b4f7-4f2ca441d579
LANGFUSE_PUBLIC_KEY=pk-lf-dd167d24-a007-4afb-a3af-8c37a922870f
LANGFUSE_HOST=https://cloud.langfuse.com

# ============ Logging Configuration ============
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_DIR=./logs
