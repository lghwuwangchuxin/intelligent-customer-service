# Memory Service Configuration Example
# Copy this file to .env and modify as needed

# Service settings
HTTP_PORT=8008
SERVICE_HOST=0.0.0.0

# Nacos service discovery
NACOS_ENABLED=true
NACOS_SERVER_ADDRESSES=localhost:8848
NACOS_NAMESPACE=public
NACOS_GROUP=DEFAULT_GROUP
NACOS_USERNAME=
NACOS_PASSWORD=

# LLM settings (for conversation summarization)
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=qwen2.5:7b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Memory settings
MEMORY_MAX_MESSAGES=50
MEMORY_SUMMARY_THRESHOLD=20
MEMORY_KEEP_RECENT=10
MEMORY_PERSIST_ENABLED=true
MEMORY_PERSIST_PATH=./data/memory_store
MEMORY_AUTO_SAVE_INTERVAL=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_DIR=./logs
