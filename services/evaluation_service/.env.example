# ============================================================
# Evaluation Service Configuration
# ============================================================
# Copy this file to .env and modify as needed

# ============ Service Configuration ============
SERVICE_NAME=evaluation-service
SERVICE_VERSION=1.0.0
SERVICE_HOST=0.0.0.0
HTTP_PORT=8003

# ============ Nacos Configuration ============
NACOS_ENABLED=true
NACOS_SERVER_ADDRESSES=localhost:8848
NACOS_NAMESPACE=public
NACOS_GROUP=DEFAULT_GROUP
NACOS_USERNAME=
NACOS_PASSWORD=

# ============ Redis Configuration ============
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_ENABLED=true
REDIS_CACHE_TTL=3600

# ============ LLM Configuration (for RAGAS) ============
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=qwen3:latest
LLM_API_KEY=
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ============ Embedding Configuration ============
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_BASE_URL=http://localhost:11434

# ============ RAG Evaluation ============
RAG_ENABLE_EVALUATION=true
RAG_EVALUATION_LOG_LEVEL=INFO

# Evaluation Settings
EVALUATION_WORKERS=2
EVALUATION_TIMEOUT=300
ENABLE_RAGAS=true

# RAGAS Metrics
RAGAS_ENABLE_FAITHFULNESS=true
RAGAS_ENABLE_ANSWER_RELEVANCY=true
RAGAS_ENABLE_CONTEXT_PRECISION=true
RAGAS_ENABLE_CONTEXT_RECALL=true

# ============ Logging Configuration ============
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_DIR=./logs
